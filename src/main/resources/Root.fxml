<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="440.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.project.RootController">

    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="42.0" prefWidth="600.0"
           stylesheets="@style.css" text="Order and Chaos" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS">
        <font>
            <Font name="Comic Sans" size="36.0"/>
        </font>
    </Label>

    <Button fx:id="buttonX" contentDisplay="CENTER" layoutX="170.0" layoutY="496.0" mnemonicParsing="false"
            onMouseClicked="#onMouseClickedCross" prefHeight="40.0" prefWidth="40.0" stylesheets="@style.css" text="X">
        <font>
            <Font name="Corbel Light" size="14.0"/>
        </font>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>

    <Button fx:id="buttonO" contentDisplay="CENTER" layoutX="390" layoutY="496.0" mnemonicParsing="false"
            onMouseClicked="#onMouseClickedCircle" prefHeight="40.0" prefWidth="40.0" stylesheets="@style.css" text="O">
        <font>
            <Font name="Corbel Light" size="14.0"/>
        </font>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>


    <Label fx:id="turn" prefHeight="42.0" prefWidth="600.0"
           text="Ciao" textAlignment="CENTER" layoutY="558" contentDisplay="CENTER">
        <font>
            <Font name="Corbel Light" size="18.0"/>
        </font>
    </Label>

    <fx:include fx:id="grid" alignment="CENTER" prefWidth="600.0" layoutY="110.0" source="Grid.fxml"/>
</AnchorPane>
